FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN apt-get update && apt-get install -y --no-install-recommends git && \
    pip install --no-cache-dir flask flask-cors requests werkzeug google-generativeai google-api-core python-dotenv PyYAML && \
    apt-get clean && rm -rf /var/lib/apt/lists/*

# Copy the adapter code and necessary backend code
COPY frontend/src/simple_adapter.py /app/frontend/src/simple_adapter.py
COPY src /app/src
COPY .env /app/.env

# Expose port
EXPOSE 5050

# Run the adapter
CMD ["python", "frontend/src/simple_adapter.py"]