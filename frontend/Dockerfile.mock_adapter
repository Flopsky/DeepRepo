FROM python:3.10-slim

WORKDIR /app

# Install dependencies
RUN pip install --no-cache-dir flask flask-cors requests werkzeug

# Copy the adapter code
COPY frontend/src/mock_adapter.py /app/frontend/src/mock_adapter.py

# Expose port
EXPOSE 5050

# Run the adapter
CMD ["python", "frontend/src/mock_adapter.py"]